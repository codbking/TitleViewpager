<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="tvp_titleWidth" format="dimension|reference"/>
    <attr name="tvp_indicatorColor" format="color|reference"/>
    <attr name="tvp_indicatorHeight" format="dimension|reference"/>
    <attr name="tvp_titleColor" format="color|reference"/>
    <attr name="tvp_pager_main_color" format="color|reference"/>

    <attr name="tvp_pager_type" format="enum">
        <enum name="FIT" value="0"/>
        <enum name="FIX" value="1"/>
        <enum name="WRAPPER" value="2"/>
    </attr>

    <declare-styleable name="TitleViewPager">
        //指示器颜色
        <attr name="tvp_indicatorColor"/>
        //指示器颜色
        <attr name="tvp_titleColor"/>
        //指示器高度
        <attr name="tvp_indicatorHeight"/>
        //设置固定title宽度，type为fix时有用
        <attr name="tvp_titleWidth" />
        //title显示的类型
        <attr name="tvp_pager_type"/>
    </declare-styleable>

</resources>